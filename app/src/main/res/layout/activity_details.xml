<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utils.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dps_primary_100">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="Personal"
                android:textColor="@color/material_dynamic_neutral70"
                android:textSize="@dimen/fs_primary_200" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="?android:attr/listDivider" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentPadding="@dimen/padding_small"
                app:cardCornerRadius="@dimen/padding_small"
                app:cardElevation="4dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconScaleType="centerInside">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:hint="Username" />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                app:contentPadding="@dimen/padding_small"
                app:cardCornerRadius="@dimen/padding_small"
                app:cardElevation="4dp">


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:startIconDrawable="@drawable/ic_phone"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone number"
                        android:inputType="phone"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="@dimen/padding_medium"
                android:gravity="center"
                android:text="Location"
                android:textColor="@color/material_dynamic_neutral70"
                android:textSize="@dimen/fs_primary_200" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/padding_small"
                android:background="?android:attr/listDivider" />

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/padding_small"
               app:contentPadding="@dimen/padding_small"
               app:cardCornerRadius="@dimen/padding_small"
               app:cardElevation="4dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

                  <AutoCompleteTextView
                      android:id="@+id/act_country"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:drawableStart="@drawable/ic_country"
                      android:drawableTint="@color/material_dynamic_neutral95"
                      android:fontFamily="@font/poppins"
                      android:hint="Country"
                      android:drawablePadding="@dimen/padding_small"
                      android:maxLength="10"
                      android:textColor="@color/material_dynamic_neutral70"
                      android:textColorHint="@color/material_dynamic_neutral70" />

                  <Spinner
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:id="@+id/spn_state">
                  </Spinner>
              </LinearLayout>
           </androidx.cardview.widget.CardView>


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="@dimen/padding_medium"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/material_dynamic_neutral70"
            android:textSize="@dimen/fs_primary_200" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/padding_small"
            android:background="?android:attr/listDivider" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>