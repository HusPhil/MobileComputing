<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.MenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium">

            <TextView
                android:textColor="@color/pageTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_medium"
                android:fontFamily="@font/poppins_semibold"
                android:text="Activies"
                android:textSize="@dimen/fs_primary_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:textColor="@color/pageTextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="@dimen/padding_large"
                android:text="List of activities in Mobile Computing"
                android:textSize="@dimen/fs_secondary_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_helloWorld"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardCornerRadius="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:padding="@dimen/padding_medium"
                        android:background="@color/darkblue">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_helloworld"
                            android:backgroundTint="@color/white"
                            android:layout_weight="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_weight="2"
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Hello World"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins"
                            android:text="Displaying 'Hello World'"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_next"
                        android:layout_margin="@dimen/padding_medium"
                        android:layout_weight="4"/>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_userProfile"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardCornerRadius="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:padding="@dimen/padding_medium"
                        android:background="@color/darkblue">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_user_profile"
                            android:backgroundTint="@color/white"
                            android:layout_weight="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_weight="2"
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="User Profile"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins"
                            android:text="Display user profile"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_next"
                        android:layout_margin="@dimen/padding_medium"
                        android:layout_weight="4"/>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_calculator"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardCornerRadius="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:padding="@dimen/padding_medium"
                        android:background="@color/darkblue">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_calculator"
                            android:backgroundTint="@color/white"
                            android:layout_weight="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_weight="2."
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Calculator"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins"
                            android:text="A basic calculator"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_next"
                        android:layout_margin="@dimen/padding_medium"
                        android:layout_weight="4"/>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_infrared"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardCornerRadius="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:padding="@dimen/padding_medium"
                        android:background="@color/darkblue">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_weight="4"
                            android:background="@drawable/ic_infrared"
                            android:backgroundTint="@color/white" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_weight="2"
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Infrared Communication"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins"
                            android:text="Study about Infrared Communication"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_next"
                        android:layout_margin="@dimen/padding_medium"
                        android:layout_weight="4"/>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_bluetooth"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardCornerRadius="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:padding="@dimen/padding_medium"
                        android:background="@color/darkblue">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_bluetooth"
                            android:backgroundTint="@color/white"
                            android:layout_weight="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_weight="2"
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Bluetooth Communication"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins"
                            android:text="Study about Bluetooth Communication"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_next"
                        android:layout_margin="@dimen/padding_medium"
                        android:layout_weight="4"/>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_BTFileTransfer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="@dimen/padding_medium"
                app:cardCornerRadius="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:padding="@dimen/padding_medium"
                    android:background="@color/darkblue">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_file_transfer"
                        android:backgroundTint="@color/white"
                        android:layout_weight="4"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:layout_weight="2"
                        android:padding="@dimen/padding_small">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:singleLine="true"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Bluetooth File Transfer"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:textSize="@dimen/fs_secondary_100"
                            android:fontFamily="@font/poppins"
                            android:text="Demo of Bluetooth Communication"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_next"
                        android:layout_margin="@dimen/padding_medium"
                        android:layout_weight="4"/>
                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>